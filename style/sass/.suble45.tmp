$primary-color: #464646; //midle grey
$secondary_color: #2099be; //blue
$tertiary_color: #2b2b2b; //dark grey // Footer gradient goes from tertiary_color to primary-color
$primary_font_color: $primary-color; // same as primary color
$secondary_font_color: $secondary_color;
$tertiary_font_color: #fff;
$main_bg_color: #fff;

.secondary_font_color{
	color: $secondary_font_color;
}
/*
To use Titilium web font, include the following in the page:
<link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600,700' rel='stylesheet' type='text/css'>
*/

#top{
	background: $primary-color;
	color: $tertiary_font_color;
	width: 100%;
	height: 45px;
}

#top_center{
	min-height:45px;
	max-height:45px;
	width:960px;
	margin: auto;
}

#top_buttons{
	float: right;
}

#top_menu{
	float: left;
}

.button{
	line-height: 45px;
	padding: 0px 15px;
	background-color: $tertiary_color;
	color: $tertiary_font_color;
	font-size: 14px;
	text-decoration: none;
	display: inline-block;
	text-align: center;
}

.button:hover{
	background-color: $secondary_color;
}

.menu{
	line-height: 45px;
	padding: 0px 15px;
	color: $tertiary_font_color;
	font-size: 14px;
	text-decoration: none;
	display: inline-block;
	text-align: center;
}

.menu:hover{
	background-color: $secondary_color;
}

#logo{
	vertical-align: middle;
}

/*****************  end of top menu ***************************/
* {
margin: 0;
}

html, body {
height: 100%;
}

body{
	margin: 0px;
	background: $main_bg_color;
	font-family: 'Titillium Web', sans-serif;
}

.wrapper {
min-height: 100%;
height: auto !important;
height: 100%;
margin: 0 auto -280px;
}

/****************************************************************/

#slider{
	width: 100%;
	height: 600px;
	background-color: $secondary_color;
}

#main_content{
	width: 960px;
	margin-left: auto ;
  	margin-right: auto ;
  	margin-bottom: 25px;
}

#search{
	height: 100px;
	width: 100%;
	vertical-align: middle;
	font-size: 24px;
	font-weight: 700;
	margin-top: 35px;
}

/**********************    Project box ***************************/

.project{
	width: 225px;
	-webkit-box-shadow: 0px 2px 2px 1px rgba(50, 50, 50, 0.5);//
	-moz-box-shadow:    0px 2px 2px 1px rgba(50, 50, 50, 0.5);
	box-shadow:         0px 2px 2px 1px rgba(50, 50, 50, 0.5);
	color: $primary_font_color;
	font-size: 13px;
	font-weight: 400;
	margin-right: 20px;
	margin-top: 20px;
}

.project h1{
	margin-top: 5px;
	margin-left: 10px;
	font-size: 18px;
}

.project img {
    display: block;
    max-width:225px;
    width: auto;
    height: auto;
}

.project_content{
		margin-left: 10px;
		margin-top: 10px;
		margin-right: 10px;
		text-align: justify;
}

.progress_bar{
	margin-top: 10px;
	margin-left: 10px;
	margin-right: 10px;
	width: 205px;
	height: 10px;
	background-color: $primary_color;
}

.progress_bar_overlay{
	float: left;
	width: 50%;
	height: 10px;
	background-color: $secondary_color;
}

.project_footer{
	margin-top: 10px;
	width: 205px;
	margin-left: 10px;
	float: left;
}

.project_footer table{
	width: 100%;
	text-align: center;
}
/*******************************************************************/

.footer, .push{
	width: 100%;
	min-height: 280px;
	color: $tertiary_font_color;
	background: $primary-color; /* Old browsers */
	background: -moz-linear-gradient(top,  $primary-color 0%, $tertiary_color 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$primary-color), color-stop(100%,$tertiary_color)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  $primary-color 0%,$tertiary_color 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  $primary-color 0%,$tertiary_color 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  $primary-color 0%,$tertiary_color 100%); /* IE10+ */
	background: linear-gradient(to bottom,  $primary-color 0%,$tertiary_color 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#464646', endColorstr='#2b2b2b',GradientType=0 ); /* IE6-9 */
}


